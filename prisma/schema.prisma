model Category {
    id    Int    @id @default(autoincrement())
    name  String @db.VarChar(30)
    icon  String @db.VarChar(30)
    color String @db.Char(7)
}

model Currency {
    id   Int    @id @default(autoincrement())
    code String @unique @db.Char(3)
}

model Marketplace {
    id      Int    @id @default(autoincrement())
    name    String
    address String @unique
}

model Receipt {
    id          Int      @id @default(autoincrement())
    date        DateTime 
    price       Float @db. 
    currency
    marketplace
}
